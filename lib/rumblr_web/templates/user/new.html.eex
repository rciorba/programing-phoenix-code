<h1>New User:</h1>

<%= form_for @changeset, Routes.user_path(@conn, :create), fn f-> %>
<div>
  <%= if @changeset.action do %>
  <div class="alert alert-danger">
    please check errors below
  </div>
  <% end %>
  <p><%= text_input f, :name, placeholder: "Name" %> <%= error_tag f, :name %></p>
  <p><%= text_input f, :username, placeholder: "Username" %> <%= error_tag f, :username %></p>
</div>
<%= submit "Create" %>
<% end %>
